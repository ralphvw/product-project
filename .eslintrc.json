{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "ignorePatterns": ["documentation/**"],

  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "logger": "readonly",
    "describe": "readonly",
    "it": "readonly",
    "before": "readonly",
    "after": "readonly",
    "beforeEach": "readonly"
  },
  "rules": {
    "comma-dangle": 0,
    "max-depth": 2,
    "no-console": "error",
    "max-lines-per-function": ["error", { "max": 50, "skipBlankLines": true }],
    "complexity": ["error", 10],
    "consistent-return": 0,
    "camelcase": 0,
    "no-param-reassign": 0,
    "no-shadow": [
      "error",
      {
        "allow": ["req", "res", "err", "next"]
      }
    ],
    "linebreak-style": 0,
    "no-underscore-dangle": 0,
    "object-curly-newline": 0,
    "arrow-parens": 0,
    "max-lines": ["error", { "max": 315, "skipBlankLines": true }]
  }
}
